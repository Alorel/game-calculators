nav.navbar.navbar-default(style={'margin-bottom': 0})
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#collapse-navbar' aria-expanded='false')
        .sr-only Toggle navigation
        .icon-bar
        .icon-bar
        .icon-bar
      a.navbar-brand(href='/') Game Calculators
      .navbar-brand.navbar-right
    .collapse.navbar-collapse#collapse-navbar
      ul.nav.navbar-nav
        each items, category in nav_pages
          li.dropdown
            a.dropdown-toggle(href='javascript:void(0)' role='button' data-toggle='dropdown' aria-expanded='false')
              span= category
              |
              |
              span.caret
            ul.dropdown-menu
              each item in items
                li
                  - var attr = {href: item.href};
                  if ('desc' in item)
                    - attr['data-tooltip'] = true;
                    - attr.title = item.desc;
                  a&attributes(attr)
                    span= item.name